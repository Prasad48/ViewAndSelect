<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/OtherFeaturesHeading"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="Other Features"
        android:background="@color/skyBlue"
        android:textColor="@color/white"/>
    <androidx.cardview.widget.CardView
        android:background="@color/light_gray"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:id="@+id/otherfeaturesCardView"
        android:layout_margin="5dp"
        android:layout_below="@+id/OtherFeaturesHeading"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120sp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Otherfeaturesicon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorAccent" />
            <TextView
                android:layout_toRightOf="@id/Otherfeaturesicon"
                android:id="@+id/otherfeature_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/otherfeature_id"
                android:layout_below="@id/otherfeature_name"
                android:layout_toRightOf="@id/Otherfeaturesicon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/otheroption_id"
                android:layout_below="@id/otherfeature_id"
                android:layout_toRightOf="@id/Otherfeaturesicon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>